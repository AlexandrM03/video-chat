generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    username  String @id
    password  String
    callers   Call[] @relation("CallCaller")
    receivers Call[] @relation("CallReceiver")
}

model Call {
    id               String    @id @default(uuid())
    callerUsername   String
    caller           User      @relation("CallCaller", fields: [callerUsername], references: [username])
    receiverUsername String
    receiver         User      @relation("CallReceiver", fields: [receiverUsername], references: [username])
    startTime        DateTime  @default(now())
    endTime          DateTime?
    screenShare      Boolean   @default(false)
}
